<%= simple_form_for @question, as: :question, url: questions_path(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :class, as: :hidden %>
    <%= f.input :text %>
    <%= f.input :alternatives %>
    <%= f.input :answers %>
    <%= f.input :extra %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
