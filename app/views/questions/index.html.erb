<h1>Listing questions</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Answers</th>
    <th></th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td><%= question.text %></td>
    <td><%= question.answers %></td>
    <td>
      <%= link_to 'Show', question_path(question) %> |
      <%= link_to 'Edit', edit_question_path(question) %> |
      <%= link_to 'Destroy', question_path(question), method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Multiple Choice', new_question_path(class: MultipleChoiceQuestion) %>
<%= link_to 'New Fill In the Blanks', new_question_path(class: FillInTheBlanksQuestion) %>
