<h1>Listing quizzes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Randomize questions</th>
    <th>Randomize answers</th>
    <th>Max times to take quiz</th>
    <th>Respond after</th>
    <th>Default theme</th>
    <th>Questions</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quizzes.each do |quiz| %>
  <tr>
    <td><%= quiz.name %></td>
    <td><%= quiz.randomize_questions %></td>
    <td><%= quiz.randomize_answers %></td>
    <td><%= quiz.max_times_to_take_quiz %></td>
    <td><%= quiz.respond_after %></td>
    <td><%= quiz.default_theme %></td>
    <td><%= quiz.questions %></td>
    <td><%= link_to 'Show', quiz %></td>
    <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
    <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

